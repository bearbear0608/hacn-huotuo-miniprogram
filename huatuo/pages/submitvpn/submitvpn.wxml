            <view wx:if="{{item.id == '2'}}">
              <textarea class="form-textarea" name="remote_content"></textarea>
            </view>
          </block>
      </i-radio-group>
    </i-panel> -->

    <button class="primary-btn" style="width:100%;margin-bottom:48rpx;" type="primary" form-type="submit">提交</button>
  </form>
</view>