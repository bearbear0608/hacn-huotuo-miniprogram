      <i-radio-group current="{{remoteWork.current}}" bindchange="handleRemoteWorkChange">
          <block wx:for="{{remoteWork.items}}">
            <i-radio position="{{remoteWork.position}}" wx:key="{{item.id}}" color="green" value="{{item.name}}">
